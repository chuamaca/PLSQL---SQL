/*1*/
--a
SELECT 
EMPLOYEE_ID,
LAST_NAME,
JOB_ID, 
HIRE_DATE AS "STARDATE"
FROM EMPLOYEES;

--b
SELECT 
EMPLOYEE_ID "EMp #",
LAST_NAME "Employee",
JOB_ID "Job", 
HIRE_DATE "Hire Date"
FROM EMPLOYEES;

--c
SELECT 
LAST_NAME || ', ' || JOB_ID "Employee and Title"
FROM EMPLOYEES;

/*2*/
--a
SELECT
LAST_NAME,
SALARY
FROM EMPLOYEES WHERE SALARY > 12000;

--b
SELECT
LAST_NAME,
SALARY
FROM EMPLOYEES WHERE SALARY NOT BETWEEN 5000 AND 12000;

--c
SELECT
LAST_NAME,
SALARY,
DEPARTMENT_ID
FROM EMPLOYEES
WHERE SALARY BETWEEN 5000 AND 12000 AND (DEPARTMENT_ID = 20 OR DEPARTMENT_ID = 50)
ORDER BY LAST_NAME;

--d
SELECT
LAST_NAME,
HIRE_DATE
FROM EMPLOYEES WHERE EXTRACT(YEAR FROM HIRE_DATE)=2006;

--e
SELECT
LAST_NAME
FROM EMPLOYEES WHERE MANAGER_ID IS NULL;

--f
SELECT 
LAST_NAME,
SALARY,
COMMISSION_PCT
FROM EMPLOYEES WHERE COMMISSION_PCT IS NOT NULL 
ORDER BY SALARY, COMMISSION_PCT DESC;


/*3*/
--a
SELECT
EMPLOYEE_ID,
LAST_NAME,
SALARY,
SALARY+SALARY*0.15 "NUEVO SALARIO",
SALARY*0.15 "INCREMENTO"
FROM EMPLOYEES;

--b
SELECT
INITCAP(LAST_NAME), LAST_NAME,
LENGTH(LAST_NAME)
FROM EMPLOYEES WHERE LAST_NAME LIKE ('J%') or LAST_NAME LIKE ('A%') or LAST_NAME LIKE ('M%');

--c
SELECT 
LAST_NAME,
MONTHS_BETWEEN(SYSDATE,HIRE_DATE) FROM EMPLOYEES ORDER BY 2;
--d
SELECT
LAST_NAME || lpad('*', SALARY/1000,'*'), salary "EMPLOYEES_AND_THEIR_SALARIES"
FROM EMPLOYEES ORDER BY SALARY DESC;


/*4*/
--A
SELECT
MAX(SALARY) MAXIMO,
MIN(SALARY) MINIMO,
SUM(SALARY) SUMA,
AVG(SALARY) PROMEDIO
FROM EMPLOYEES;

--B
SELECT
MAX(SALARY) MAXIMO,
MIN(SALARY) MINIMO,
SUM(SALARY) SUMA,
AVG(SALARY) PROMEDIO,
JOB_ID
FROM EMPLOYEES GROUP BY JOB_ID;


--C
SELECT DEPARTMENT_ID, COUNT(DEPARTMENT_ID) FROM EMPLOYEES GROUP BY DEPARTMENT_ID ORDER BY 2 DESC;

--D
SELECT
MANAGER_ID,
MIN(SALARY) minimo
FROM EMPLOYEES
WHERE MANAGER_ID IS NOT NULL
GROUP BY MANAGER_ID 
having MIN(SALARY) > 6000
ORDER BY 2 DESC;

SELECT MIN(SALARY), MAX(SALARY) FROM EMPLOYEES WHERE MANAGER_ID = 108;